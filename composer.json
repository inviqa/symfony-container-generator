{
    "name": "inviqa/symfony-container-generator",
    "description": "Generic Symfony DI Container Builder",

    "require": {
        "php": ">=5.3.3",
        "symfony/filesystem": "^2.6",
        "symfony/dependency-injection": "^2.6",
        "symfony/config": "^2.6"
    },
    "autoload": {
        "psr-0": {
            "ContainerTools": "src/",
            "": "src"
        }
    },
    "require-dev": {
        "phpspec/phpspec": "^2.2",
        "bossa/phpspec2-expect": "^1.0",
        "behat/behat": "^3.0"
    },
    "config": {
        "bin-dir": "bin"
    }
}
